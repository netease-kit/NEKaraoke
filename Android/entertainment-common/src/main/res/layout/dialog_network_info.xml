<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_data_center_tips"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_network_situation"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_222222"/>

        <TextView
            android:id="@+id/tv_content"
            android:scrollbars="vertical"
            android:isScrollContainer="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical"
            android:scrollbarFadeDuration="2000"
            android:fadeScrollbars="false"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/tv_title"
            android:lineSpacingExtra="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="6dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="key1：value1\nkey2：value2\nkey2：value2\nkey2：value2\nkey2：value2\nkey2：value2\nkey2：value2\nkey2：value2\nkey2：value2" />


        <TextView
            android:id="@+id/tv_dialog_positive"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/line_bottom"
            android:gravity="center"
            android:text="@string/app_sure"
            android:textColor="#007AFF"
            android:textSize="17sp" />


        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_0c000050" />
    </RelativeLayout>

</RelativeLayout>