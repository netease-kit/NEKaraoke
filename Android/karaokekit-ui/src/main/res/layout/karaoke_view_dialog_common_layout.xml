<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/dimen_20_dp"
        android:background="@drawable/shape_dialog_choice_bg">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/color_333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_dialog_negative"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/line_bottom"
            android:layout_alignEnd="@id/line_divide"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="17dp"
            android:text="@string/karaoke_cancel"/>

        <TextView
            android:id="@+id/tv_dialog_positive"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/line_bottom"
            android:layout_alignStart="@id/line_divide"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="#ff007aff"
            android:textSize="17dp"
            android:text="@string/karaoke_sure"/>

        <View
            android:id="@+id/line_divide"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:layout_below="@id/line_bottom"
            android:layout_centerHorizontal="true"
            android:background="#0c000050" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_dialog_content"
            android:layout_marginTop="20dp"
            android:background="#0c000050" />
    </RelativeLayout>

</RelativeLayout>